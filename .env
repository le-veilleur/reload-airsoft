# =============================================================================
# CONFIGURATION RELOAD AIRSOFT - FRONTEND
# =============================================================================

# =============================================================================
# ENVIRONNEMENT
# =============================================================================
NODE_ENV=development
REACT_APP_ENV=development
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_DEVTOOLS=true

# =============================================================================
# API GATEWAY (Point d'entrée principal)
# =============================================================================
REACT_APP_API_GATEWAY_URL=http://localhost:8080
REACT_APP_API_GATEWAY_VERSION=/api/v1
REACT_APP_API_GATEWAY_GRPC_URL=localhost:50053
REACT_APP_GATEWAY_HEALTH_URL=http://localhost:8080/health

# =============================================================================
# USER SERVICE (Authentification)
# =============================================================================
REACT_APP_USER_SERVICE_URL=http://localhost:8181
REACT_APP_USER_SERVICE_GRPC_URL=localhost:50051
REACT_APP_AUTH_API_URL=http://localhost:8080/api/v1/users

# =============================================================================
# EVENT SERVICE
# =============================================================================
REACT_APP_EVENT_SERVICE_URL=http://localhost:8182
REACT_APP_EVENT_SERVICE_GRPC_URL=localhost:50052
REACT_APP_EVENTS_API_URL=http://localhost:8080/api/v1/events

# =============================================================================
# PAYMENT SERVICE
# =============================================================================
REACT_APP_PAYMENT_SERVICE_URL=http://localhost:8183
REACT_APP_PAYMENT_SERVICE_GRPC_URL=localhost:50054

# =============================================================================
# ANALYTICS SERVICE
# =============================================================================
REACT_APP_ANALYTICS_SERVICE_URL=http://localhost:8184
REACT_APP_ANALYTICS_SERVICE_GRPC_URL=localhost:50055

# =============================================================================
# URLS POUR LES RÉSERVATIONS
# =============================================================================
REACT_APP_BOOKINGS_API_URL=http://localhost:8080/api/v1/events

# =============================================================================
# CONFIGURATION DES TIMEOUTS (en millisecondes)
# =============================================================================
REACT_APP_API_TIMEOUT=30000
REACT_APP_AUTH_TIMEOUT=10000
REACT_APP_UPLOAD_TIMEOUT=120000

# =============================================================================
# CONFIGURATION RETRY
# =============================================================================
REACT_APP_MAX_RETRIES=3
REACT_APP_RETRY_DELAY=1000

# =============================================================================
# CONFIGURATION CACHE
# =============================================================================
REACT_APP_EVENTS_CACHE_TTL=300000
REACT_APP_AUTO_REFRESH_INTERVAL=60000
REACT_APP_FORCE_REFRESH_INTERVAL=1800000

# =============================================================================
# CONFIGURATION JWT
# =============================================================================
REACT_APP_JWT_COOKIE_NAME=JWT-Reload-airsoft
REACT_APP_JWT_EXPIRY_DAYS=7
REACT_APP_REFRESH_TOKEN_INTERVAL=300000
REACT_APP_SECURE_COOKIES=false
REACT_APP_SAME_SITE_COOKIES=lax

# =============================================================================
# CONFIGURATION UPLOADS
# =============================================================================
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# =============================================================================
# CONFIGURATION NOTIFICATIONS
# =============================================================================
REACT_APP_NOTIFICATION_TIMEOUT=5000
REACT_APP_ERROR_NOTIFICATION_TIMEOUT=10000
REACT_APP_SUCCESS_NOTIFICATION_TIMEOUT=3000

# =============================================================================
# CONFIGURATION GÉOSERVICES
# =============================================================================
REACT_APP_NOMINATIM_URL=https://nominatim.openstreetmap.org
REACT_APP_GEOCODING_USER_AGENT=ReloadAirsoft/1.0
REACT_APP_GEOCODING_COUNTRY_CODES=fr

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PAYMENTS=true
REACT_APP_ENABLE_MAPS=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# =============================================================================
# URLS DE PRODUCTION (à modifier pour le déploiement)
# =============================================================================
REACT_APP_PROD_API_GATEWAY_URL=https://api.reload-airsoft.com
REACT_APP_PROD_USER_SERVICE_URL=https://auth.reload-airsoft.com
